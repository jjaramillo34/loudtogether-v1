{
  "version": 2,
  "builds": [
    {
      "src": "loudtogether-backend/src/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "loudtogether-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "loudtogether-backend/src/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "loudtogether-frontend/dist/$1"
    }
  ]
}